{
  "name": "gdbots/query-parser",
  "homepage": "https://github.com/gdbots/query-parser-php",
  "description": "Php library that converts search queries into terms, phrases, hashtags, mentions, etc.",
  "type": "library",
  "license": "Apache-2.0",
  "require": {
    "php": ">=7.1",
    "gdbots/common": "~0.1 || ^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.4",
    "ruflin/elastica": "~5.3"
  },
  "autoload": {
    "psr-4": {
      "Gdbots\\QueryParser\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Gdbots\\Tests\\QueryParser\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.3.x-dev"
    }
  }
}
